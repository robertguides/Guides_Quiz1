<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guides.quiz1.Activity.MainActivity">

    <ListView
        android:id="@+id/LiAndroid"
        android:layout_width="650px"
        android:layout_height="700px"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="150px"
        android:layout_height="100px"
        android:text="Home"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/LiAndroid"
        android:layout_marginBottom="34dp"
        android:onClick="Home"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="100px"
        android:layout_height="100px"
        android:text="1"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toStartOf="@+id/button3"
        android:layout_marginEnd="18dp"
        android:onClick="goOne"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="100px"
        android:layout_height="100px"
        android:text="2"
        android:layout_marginEnd="12dp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toStartOf="@+id/button4"
        android:onClick="goTwo"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="100px"
        android:layout_height="100px"
        android:text="3"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignEnd="@+id/LiAndroid"
        android:layout_marginEnd="14dp"
        android:onClick="goThree"/>


</RelativeLayout>
